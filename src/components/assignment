 const Func2 = () => {

    let [Temperature, setTemperature] = useState(0)
    return (
        <>
            <h1>Temperature is : {Temperature} CÂ°</h1>
            <button onClick={() => setTemperature(++Temperature)}>Temp +</button>
            <button onClick={() => setTemperature(--Temperature)}>Temp -</button>
        </>)
}
export default Func2 